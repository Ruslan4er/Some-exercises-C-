@model TestWebApplication.Models.Book

@{
    ViewBag.Title = "Edit";
}

<h2>Книга № @Model.Id</h2>
@using (Html.BeginForm())
{
    <fieldset>
        @Html.HiddenFor(book => book.Id)
        <p>
            @Html.LabelFor(book => book.Name, "Название книги")
            <br />
            @Html.EditorFor(book => book.Name)
        </p>
        <p>
            @Html.LabelFor(book => book.Author, "Автор")
            <br />
            @Html.EditorFor(book => book.Author)
        </p>
        <p>
            @Html.LabelFor(book => book.Price, "Цена")
            <br />
            @Html.EditorFor(book => book.Price)
        </p>
        <p><input type="submit" value="Обновить" /></p>
    </fieldset>
}

