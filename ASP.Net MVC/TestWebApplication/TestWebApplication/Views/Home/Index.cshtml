@using TestWebApplication.Models
@{
    ViewBag.Title = "Книжный магазин";
}

<a href="/Home/Create">Добавить книгу</a>
<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                <td><p><a href="/Home/Edit/@b.Id">Редактировать</a></p></td>
                <td><p><a href="/Home/Delete/@b.Id">Удалить</a></p></td>
            </tr>
        }
    </table>
</div>

@{
    string[] cities = new[] { "Лондон", "Париж", "Москва" };
}

@{
    string[] countries = new[] { "Россия", "Украина", "США" };
}

@using TestWebApplication.Helpers
@Html.CreateList(cities)
@Html.CreateList(countries)
@{string[] list = Model;}

@Html.CreateList(list)

