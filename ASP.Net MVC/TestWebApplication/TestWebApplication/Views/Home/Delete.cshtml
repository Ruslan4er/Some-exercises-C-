@model TestWebApplication.Models.Book

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление книги</h2>
<dl>
    <dt>Название</dt>
    <dd>
        @Html.DisplayFor(book => book.Name)
    </dd>

    <dt>Автор</dt>
    <dd>
        @Html.DisplayFor(book => book.Author)
    </dd>

    <dt>Цена</dt>
    <dd>
        @Html.DisplayFor(book => book.Price)
    </dd>
</dl>

@using (Html.BeginForm())
{
    <input type="submit" value="Удалить"/>
}


